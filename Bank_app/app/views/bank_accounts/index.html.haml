%h1
  BankAccount
%table.table.table-bordered
  %thead
    %tr
      %th Account number
      %th Blance
      %th Actions
  %tbody
    - @bank_accounts.each do |bank|
      %tr
        %td #{bank.account_number}
        %td #{number_to_currency(bank.balance,unit: "P")}
        %td
          = link_to bank_account_path(bank),class: "btn btn-primary"  do
            show

