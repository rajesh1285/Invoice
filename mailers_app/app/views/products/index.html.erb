    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.email %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit' ,edit_product_path(product),:remote => true,:class => 'edit_pony' %>
          
          
          
        </td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , :remote =>true, :class=> 'delete_pony'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

