<p id="notice"><%= notice %></p>

<h1>Geocoders</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @geocoders.each do |geocoder| %>
      <tr>
        <td><%= geocoder.address %></td>
        <td><%= geocoder.latitude %></td>
        <td><%= geocoder.longitude %></td>
        <td><%= link_to 'Show', geocoder %></td>
        <td><%= link_to 'Edit', edit_geocoder_path(geocoder) %></td>
        <td><%= link_to 'Destroy', geocoder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Geocoder', new_geocoder_path %>
